@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/daisyui@1.16.0/dist/full.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@400;700&display=swap" rel="stylesheet"> <!-- Google Fonts -->
    <style>
        .btn-custom {
            background-color: rgba(25, 54, 44, 0.9); /* #19362C with 90% opacity */
            color: white;
        }

            .btn-custom:hover {
                background-color: rgba(25, 54, 44, 0.7); /* Slightly more transparent on hover */
            }
    </style>
</head>
<body class="bg-gray-100">
    <div class="max-w-lg mx-auto p-6 bg-[#D8F3DC] bg-opacity-90 rounded-lg shadow-md mt-10">
        <h2 class="text-2xl font-bold mb-6 text-center text-black">Register</h2>
        <form asp-action="Register" method="post">
            <!-- Name -->
            <div class="mb-4">
                <label for="name" class="block text-sm font-medium text-black">Name</label>
                <input type="text" id="name" name="Name" class="input input-bordered w-full mt-1" required>
            </div>

            <!-- Email -->
            <div class="mb-4">
                <label for="email" class="block text-sm font-medium text-black">Email</label>
                <input type="email" id="email" name="Email" class="input input-bordered w-full mt-1" required>
            </div>

            <!-- Password -->
            <div class="mb-4">
                <label for="password" class="block text-sm font-medium text-black">Password</label>
                <input type="password" id="password" name="Password" class="input input-bordered w-full mt-1" required>
            </div>

            <button type="submit" class="btn btn-custom w-full">Register</button>
        </form>
    </div>
</body>
</html>
